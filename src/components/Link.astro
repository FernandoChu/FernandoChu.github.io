---
interface Props {
  href: string;
  className?: string;
  targetBlank?: boolean;
}

const { href, className = "", targetBlank = true } = Astro.props;
---

<a
  class={`underline hover:text-blue-800 visited:text-purple-600 ${className}`}
  target={targetBlank === true ? "_blank" : "_self"}
  rel={targetBlank === true ? "noreferrer noopener" : undefined}
  href=`${href}`><slot /></a
>
